<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('partials/headLogin') %>

</head>


<body>

    <!-- Navbar -->

    <%- include('partials/headerNavbar') %>

    <!--/NavBar-->
    <div class="container" style="margin-top: 100px;">
        <div class="row">
            <div class="col-sm">
                <form action="/users/register" method="post">

                    <% if (typeof errors !== 'undefined') {
            errors.map(function (error) { %>
                    <p style="color: red;"><%= error.msg %></p>
                    <% })
                        }%>

                    <div class="container">
                        <div class="login-container-2">
                            <div class="register-2">
                                <h2>Registrarse</h2>

                                <div class="form-group">
                                    <label for="">Ingrese su nombre</label>
                                    <input type="text" name="firstName" class="form-control"
                                        value="<%= typeof data != 'undefined' ? data.firstName : '' %>">
                                </div>

                                <div class="form-group">
                                    <label for="">Ingrese su apellido</label>
                                    <input type="text" name="lastName" class="form-control"
                                        value="<%= typeof data != 'undefined' ? data.lastName : '' %>">
                                </div>

                                <div class="form-group">
                                    <label for="">Ingrese su email</label>
                                    <input type="text" name="email" class="form-control"
                                        value="<%= typeof data != 'undefined' ? data.email : '' %>">
                                </div>

                                <div class="form-group">
                                    <label for="">Ingrese su contraseña</label>
                                    <input type="password" name="password" class="form-control"
                                        value="<%= typeof data != 'undefined' ? data.password : '' %>">
                                </div>

                                <div class="form-group">
                                    <label for="">Cargar imagen de usuario</label>
                                    <input type="text" name="image" class="form-control"
                                        value="<%= typeof data != 'undefined' ? data.image : '' %>">
                                </div>

                                <div class="form-group">
                                    <button class="btn btn-dark">REGISTRARSE</button>
                                </div>
                                <p>¿Ya tienes una cuenta?<a class="link" href="/users/login"> Inicia Sesión</a></p>

                            </div>

                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="/jquery/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>